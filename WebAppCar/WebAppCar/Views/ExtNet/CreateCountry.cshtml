@model WebAppCar.ViewModel.CountryViewModel


@{
    ViewBag.Title = "Submit";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}
@section headtag
{

}

@section example
{@(
     Html.X().Window()
                .Title("Country")
                .Width(250)
                .Height(200)
                .Layout(LayoutType.Fit)
                .Closable(false)
                .Border(false)
                .Items(
                    Html.X().FormPanel()
                        .ID("FormPanelCountry")
                        .Frame(true)
                        .DefaultAnchor("100%")
                        .BodyPadding(6)
                        .FieldDefaults(def =>
                        {
                            def.MsgTarget = MessageTarget.Side;
                        })
                        .Items(items =>
                        {
                            items.Add(Html.X().HiddenFor(m => m.Id));
                            items.Add(Html.X().TextFieldFor(m => m.Continent));
                            items.Add(Html.X().TextFieldFor(m => m.NameOfContry));

                        })
            )

            .Buttons(
                Html.X().Button()
                .Text("add Cars")
                .DirectEvents(de =>
                {
                    de.Click.Url = Url.Action("ShowListCars");
                    de.Click.EventMask.ShowMask = true;
                    
                }),
                Html.X().Button()
                .Text("Submit")
                .DirectEvents(de =>
                {
                    de.Click.Url = Url.Action("SuccessSubmitCountry");
                    de.Click.EventMask.ShowMask = true;
                    de.Click.FormID = "FormPanelCountry";
                })

            )
)

}